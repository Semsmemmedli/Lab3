      flex-direction: column;
      min-height: 100vh;
    }
    header {
      padding: 20px;
      text-align: center;
      font-weight: bold;
      font-size: 24px;
    }
    .container {
      display: flex;
      flex: 1;
    }
    .sidebar {
      width: 220px;
      padding: 15px;
      background: #eee;
      box-sizing: border-box;
    }
    .main {
      flex: 1;
      padding: 40px 30px;
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
    }
    .text {
      max-width: 60%;
    }
    .main img {
      max-width: 200px;
      border-radius: 8px;
      margin-left: 20px;
      cursor: pointer;
    }
    footer {
      padding: 15px;
      text-align: center;
